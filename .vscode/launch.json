    "version": "0.2.0",
    "configurations": [
        {
            "name": "channeltalk (debug mode - android)",
            "request": "launch",
            "type": "dart",
            "args": [
                "--flavor",
                "local"
            ]
        },
        {
            "name": "channeltalk (debug mode - ios)",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "channeltalk (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "channeltalk (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release",
            "args": [
                "--flavor",
                "prod"
            ]
        },
        {
            "name": "Golden",
            "request": "launch",
            "type": "dart",
            "codeLens": {
                "for": [
                    "run-test",
                    "run-test-file"
                ]
            },
            "args": [
                "--update-goldens"
            ]
        }
    ]
}